<script>
  const prefersReducedMotion = window.matchMedia(
    "(prefers-reduced-motion: reduce)"
  ).matches;
  const isMobile = window.innerWidth < 768;
  let wait = false;
  if (!prefersReducedMotion && !isMobile) {
    const waves = document.getElementById("waves") as SVGSVGElement | null;
    if (waves) {
      const onScroll = () => {
        if (wait) return;
        wait = true;
        window.requestAnimationFrame(() => {
          const prefersReducedMotion = window.matchMedia(
            "(prefers-reduced-motion: reduce)"
          ).matches;
          const isMobile = window.innerWidth < 768;
          if (prefersReducedMotion || isMobile) {
            return;
          }
          const y = (window.scrollY / 40) % 2000;
          waves.setAttribute("viewBox", `0 ${y} 4000 4000`);
          waves.setAttribute("stroke-dashoffset", `${y}`);
          wait = false;
        });
      };
      window.addEventListener("scroll", onScroll);
      window.addEventListener("resize", onScroll);
    }
  }
</script>
<svg
  id="waves"
  class="-z-80 fixed left-0 top-0 w-full h-full *:stroke-pink-800/40 *:dark:stroke-[rgba(205,147,54,0.5)] max-md:opacity-60"
  viewBox="0 0 4000 4000"
  preserveAspectRatio="xMidYMid slice"
>
  <style>
    @keyframes wave {
      from {
        stroke-dashoffset: 0;
      }
      to {
        stroke-dashoffset: -24;
      }
    }
    /* #wave {
      animation: wave 4s linear infinite;
    } */

    /* Disable animation on mobile devices and when reduced motion is preferred */
    @media (max-width: 768px), (prefers-reduced-motion: reduce) {
      #wave {
        animation: none;
      }
    }
  </style>
